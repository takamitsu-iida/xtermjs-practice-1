    <style>
      body, html {
        font-family: helvetica, sans-serif, arial;
        font-size: 1em;
        color: #111;
        height: 100%;
        margin: 0;
      }

      #terminal-container {
        display: block;
        width: calc(100%);
        margin: 0;
        padding: 0;
        border: 0;
        min-height: calc(100vh - 60px);
      }

      #terminal-container-not-used {
        display: block;
        width: calc(100% - 1 px);
        margin: 0 auto;
        padding: 2px;
        height: calc(100% - 20 px);
      }

      #status {
        display: inline-block;
        color: rgb(240, 240, 240);
        background-color: rgb(50, 50, 50);
        padding-left: 10px;
        padding-right: 10px;
        border-color: white;
        border-style: none solid none solid;
        border-width: 1px;
        text-align: left;
        z-index: 100;
      }
    </style>
